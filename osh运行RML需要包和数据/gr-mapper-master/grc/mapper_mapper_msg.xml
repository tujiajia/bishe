<?xml version="1.0"?>
<block>
  <name>Bit to Symbol Mapper (Async Msg)</name>
  <key>mapper_mapper_msg</key>
  <category>mapper</category>
  <import>import mapper</import>
  <make>mapper.mapper_msg($modtype, $symbol_values)</make>
  <param>
    <name>Modulaton</name>
    <key>modtype</key>
    <type>enum</type>
    <option>
        <name>BPSK</name>
        <key>mapper.BPSK</key>
    </option>
    <option>
        <name>Pi/2BPSK</name>
        <key>mapper.P2BPSK</key>
    </option>
    <option>
        <name>QPSK</name>
        <key>mapper.QPSK</key>
    </option>
    <option>
        <name>8PSK</name>
        <key>mapper.PSK8</key>
    </option>
    <option>
        <name>QAM16</name>
        <key>mapper.QAM16</key>
    </option>
    <option>
        <name>QAM64</name>
        <key>mapper.QAM64</key>
    </option> 
    <option>
        <name>PAM4</name>
        <key>mapper.PAM4</key>
    </option>
  </param>

  <param>
    <name>Symbol Values</name>
    <key>symbol_values</key>
    <value>[0,1]</value>
    <type>int_vector</type>
  </param>

  <sink>
    <name>pdus</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <source>
    <name>cpdus</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
